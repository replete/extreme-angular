{
  "**/*.{js,ts,html,json}": "eslint",
  "**/*.{css,scss}": "stylelint",
  "**/*.{js,ts,css,scss,sh,html,md,json,yaml,yml}": "prettier --write --log-level warn",
  "**/*.{js,ts,sh,html,md}": "cspell --quiet",
  "src/**/*.ts": "tsc-files --noEmit",
  "e2e/**/*.ts": "tsc-files --noEmit -p tsconfig.e2e.json",
  "playwright.config.ts": "tsc-files --noEmit -p tsconfig.e2e.json"
}
